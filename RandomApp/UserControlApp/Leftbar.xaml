<UserControl x:Class="RandomApp.UserControlApp.Leftbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RandomApp.UserControlApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="Danh sách đoàn 1"/>
        </StackPanel>
        <StackPanel>
            <DataGrid 
                x:Name="ListPersonnel"
                Background="Transparent">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã NV" Binding="{Binding Code}"/>
                    <DataGridTextColumn Header="Họ và tên" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Vị trí CV" Binding="{Binding Workshop}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </StackPanel>
</UserControl>
